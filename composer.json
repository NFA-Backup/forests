{
    "name": "cambrico/farm_nfa",
    "description": "farmOS Deployment for National Forestry Authority of Uganda",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://farmOS.org",
    "support": {
        "docs": "https://farmOS.org/guide",
        "forum": "https://farmOS.discourse.group",
        "chat": "https://matrix.to/#/#farmOS:matrix.org"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/farmOS/farmOS.git"
        },
        {
            "type": "git",
            "url": "https://github.com/farmOS/farm_forest.git"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "lucianocosta/jquery.mtz.monthpicker",
                "version": "master",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/lucianocosta/jquery.mtz.monthpicker.git",
                    "type": "git",
                    "reference":"master"

                }
            }
        }
    ],
    "require": {
        "cweagans/composer-patches": "^1.7",
        "drupal/config_devel": "^1",
        "drupal/default_content": "^2",
        "drupal/devel_entity_updates": "^3",
        "drupal/element_multiple": "1.x-dev",
        "drupal/entity_dialog_formatter": "^1",
        "drupal/farm_forest": "2.x",
        "drupal/field_group": "^3",
        "drupal/gin_lb": "^1",
        "drupal/layout_builder_styles": "^1",
        "drupal/lb_routing": "^1",
        "drupal/migrate_source_csv": "^3",
        "drupal/month_year": "^2",
        "drupal/select_or_other": "^4",
        "farmos/farmos": "^2",
        "lucianocosta/jquery.mtz.monthpicker": "master",
        "oomphinc/composer-installers-extender": "^2",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "drupal/core-composer-scaffold": true,
            "cweagans/composer-patches": true,
            "composer/installers": true,
            "wikimedia/composer-merge-plugin": true,
            "oomphinc/composer-installers-extender": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-types": ["npm-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/farm": ["farmos/farmos"],
            "web/modules/farm_forest": ["drupal/farm_forest"],
            "web/libraries/{$name}": ["type:drupal-library", "vendor:npm-asset"],
            "web/modules/{$name}": ["type:drupal-module"],
            "web/themes/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/select_or_other": {
                "Issue #3227558: AllowedValuesConstraintValidator::getValidChoices only checks for config fields and not base fields": "https://www.drupal.org/files/issues/2021-08-10/3227558-2.patch"
            },
            "drupal/core": {
                "Issue #2985882-85: Workaround for Call to a member function in layout builder":"https://www.drupal.org/files/issues/2020-04-08/2985882-field-85.patch"
            },
            "drupal/entity_reference_revisions": {
                "Issue #2667748: Allow single scalar value in EntityReferenceRevisions data type plugin": "patches/entity_reference_revisions/2667748-42.patch"
            },
            "drupal/backup_migrate": {
                "Issue #2930369: New backup source: PostgresQL (D8)": "https://www.drupal.org/files/issues/2022-11-20/backup_migrate-n2930369-28.patch"
            }
        },
        "merge-plugin": {
            "include": [
                "web/profiles/farm/composer.libraries.json",
                "web/profiles/farm/composer.project.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true
        },
        "patchLevel": {
            "drupal/core": "-p2",
            "farmos/farmos": "-p1"
        }
    },
    "require-dev": {
        "mglaman/drupal-check": "^1",
        "mglaman/phpstan-drupal": "^1",
        "palantirnet/drupal-rector": "^0.15.0",
        "phpcompatibility/php-compatibility": "^9",
        "phpcompatibility/phpcompatibility-all": "^1",
        "phpspec/prophecy-phpunit": "^2",
        "phpstan/extension-installer": "^1",
        "phpstan/phpstan-deprecation-rules": "^1"
    }
}
